{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "typography": {
      "fontFamily": "Source Sans Pro, sans-serif",
      "lineHeight": "1.6",
      "fontSizes": [
        {
          "slug": "base",
          "size": "1rem",
          "name": "Par d√©faut"
        },
        {
          "slug": "lg",
          "size": "1.25rem",
          "name": "Grand"
        }
      ]
    },
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#E30613",
          "name": "Rouge Mission Locale"
        },
        {
          "slug": "neutral",
          "color": "#F5F5F5",
          "name": "Gris clair"
        },
        {
          "slug": "text",
          "color": "#2A2A2A",
          "name": "Texte principal"
        }
      ],
      "background": true,
      "text": true
    },
    "spacing": {
      "blockGap": "1.5rem",
      "spacingScale": {
        "steps": 10,
        "mediumStep": 8,
        "unit": "px"
      }
    },
    "border": {
      "radius": "8px",
      "width": "1px",
      "color": "#cccccc"
    }
  },
  "styles": {
    "elements": {
      "input": {
        "color": {
          "text": "#2A2A2A",
          "background": "#FFFFFF"
        },
        "border": {
          "color": "#cccccc",
          "radius": "8px",
          "width": "1px",
          "style": "solid"
        },
        "spacing": {
          "padding": "12px"
        },
        "typography": {
          "fontSize": "1rem"
        }
      },
      "button": {
        "color": {
          "text": "#FFFFFF",
          "background": "#E30613"
        },
        "border": {
          "radius": "8px",
          "width": "0px"
        },
        "spacing": {
          "padding": "12px 24px"
        },
        "typography": {
          "fontSize": "1rem",
          "fontWeight": "600"
        }
      },
      "textarea": {
        "color": {
          "text": "#2A2A2A",
          "background": "#FFFFFF"
        },
        "border": {
          "color": "#cccccc",
          "radius": "8px",
          "width": "1px"
        },
        "spacing": {
          "padding": "12px"
        }
      },
      "label": {
        "typography": {
          "fontSize": "1rem",
          "fontWeight": "500"
        },
        "color": {
          "text": "#2A2A2A"
        }
      }
    }
  }
}
